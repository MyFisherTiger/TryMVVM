<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--DialogFragment默认样式-->
    <style name="fragment_dialog_default_screen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>

        <!-- 状态栏透明 -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <!-- colorPrimaryDark 透明 -->
        <item name="colorPrimaryDark">@color/transparent</item>
        <!-- colorPrimary 透明 -->
        <item name="colorPrimary">@color/transparent</item>
        <!-- 导航栏透明 -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <!--DialogFragment全屏样式-->
    <style name="fragment_dialog_full_screen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>

        <!-- 设置全屏模式 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 不在Window上，全屏的关键-->
        <item name="android:windowIsFloating">false</item>

    </style>
</resources>